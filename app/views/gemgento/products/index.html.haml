%header
  %h5 Categories
  %nav
    %ul
      - @categories.each do |cat|
        %li
          = link_to cat.name, category_path(cat)

%article
  %section
    - @products.each do |p|
      %figure
        - if p.assets.first
          = link_to (image_tag p.assets.first.url), product_path(p)
        - else
          = link_to (image_tag 'http://placekitten.com/g/500/500'), product_path(p)
        %figcaption
          %span= p.name
          %span= "$ #{p.original_price.to_i}"
